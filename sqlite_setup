CREATE TABLE inventory (id INTEGER PRIMARY KEY, quantity INTEGER);
CREATE TABLE parts (id INTEGER PRIMARY KEY, type TEXT, name TEXT, active BOOLEAN, created_at REAL, img_uri TEXT, color TEXT);
CREATE TABLE completesets (id INTEGER PRIMARY KEY, filename TEXT, name TEXT, active INTEGER, created_at REAL, awheel1 INTEGER, awheel2 INTEGER, atruck INTEGER, adeck INTEGER, agrip INTEGER, bwheel1 INTEGER, bwheel2 INTEGER, btruck INTEGER, bdeck INTEGER, bgrip INTEGER);

